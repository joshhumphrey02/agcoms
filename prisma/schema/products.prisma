model Category {
  id            String        @id @default(cuid())
  name          String        @unique
  slug          String
  subcategories Subcategory[]
  images        Image[] // A Product can have many Images
  products      Products[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Subcategory {
  id         String     @id @default(cuid())
  name       String     @unique
  category   Category   @relation(fields: [categoryId], references: [id]) // Belongs to a Category
  categoryId String
  slug       String
  products   Products[] // A Subcategory has many Products
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

// Define the Product model
model Products {
  id            String            @id @default(cuid())
  name          String            @unique
  description   String
  price         Float?
  category      Category          @relation(fields: [categoryId], references: [id])
  categoryId    String
  subcategory   Subcategory?      @relation(fields: [subcategoryId], references: [id])
  subcategoryId String?
  specs         ProductSpecs[]
  features      ProductFeatures[]
  images        Image[] // A Product can have many Images
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model ProductSpecs {
  id        String   @id @default(cuid())
  product   Products @relation(fields: [productId], references: [id]) // Belongs to a Product
  productId String
  name      String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProductFeatures {
  id        String   @id @default(cuid())
  product   Products @relation(fields: [productId], references: [id]) // Belongs to a Product
  productId String
  name      String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
